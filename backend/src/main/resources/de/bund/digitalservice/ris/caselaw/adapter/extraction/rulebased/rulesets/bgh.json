{
  "$schema": "_schema.json",
  "name": "bgh",
  "rules": [
    {
      "name": "normzeile",
      "section_markers": [
        { "label": "norms" },
        { "label": "guiding_principle", "line_offset": 1 }
      ],
      "patterns": [
        "^((?!Der|Ist|Gemäß|Nach|Siehe|Entsprechend)[A-Za-zÄÖÜäöüß\\.\\s]{2,15})?(§+|Art\\.|Artikel)\\s*\\d+(?:[a-z]\\b)?(\\s+Abs\\.\\s*\\d+)?"
      ]
    },
    {
      "name": "bgh_urteil_vom",
      "section_markers": [{ "label": "rubrum", "max_lines": 1 }],
      "patterns": ["^BGH, (Urteil|Versäumnisurteil|Beschluss) vom"]
    },
    {
      "name": "in_der_strafsache",
      "section_markers": [{ "label": "other" }],
      "patterns": ["^\\s*in der Strafsache\\s*$"]
    }
  ]
}
