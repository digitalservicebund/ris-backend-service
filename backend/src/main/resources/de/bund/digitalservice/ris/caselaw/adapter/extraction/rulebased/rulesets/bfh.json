{
  "$schema": "_schema.json",
  "name": "bfh",
  "rules": [
    {
      "name": "titelzeile_dann_leitsatz",
      "section_markers": [
        { "label": "headline" },
        { "label": "guiding_principle", "line_offset": 1 }
      ],
      "patterns": [[{ "IS_TITLE": true }, { "IS_ALPHA": true }]],
      "conditions": ["is_not_short_line"]
    },
    {
      "name": "tabelle",
      "section_markers": [{ "label": "table", "max_lines": 1 }],
      "patterns": [[{ "IS_ALPHA": true }]],
      "conditions": ["is_table"]
    },
    {
      "name": "dokumenttyp",
      "extractions": [{ "label": "document_type", "priority": 1 }],
      "patterns": ["(?i)(urteil|beschluss|vers√§umnisurteil|entscheidung)"],
      "conditions": ["is_table"]
    },
    {
      "name": "vorinstanz",
      "extractions": [{ "label": "previous_decisions" }],
      "patterns": ["Vorinstanz:.*"]
    },
    {
      "name": "tatbestand_roemisch",
      "section_markers": [{ "label": "case_facts" }],
      "patterns": ["^\\s*(I|A)\\.\\s*$"]
    },
    {
      "name": "entscheidungsgruende_roemisch",
      "section_markers": [{ "label": "decision_reasons" }],
      "patterns": ["^\\s*(II|B)\\.\\s*$"]
    }
  ]
}
