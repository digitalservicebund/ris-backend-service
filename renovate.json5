{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "requiredStatusChecks": [
    "deploy-uat"
  ],
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "platformAutomerge": false,
  "rangeStrategy": "bump",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "timezone": "Europe/Berlin",
  "automergeSchedule": [
    "before 5:30am every weekday",
    "after 7:30pm every weekday"
  ],
  "automergeType": "pr",
  "packageRules": [
    {
      "matchPackageNames": [
        '@playwright/test',
        'playwright'
      ],
      "rangeStrategy": "pin",
      "allowedVersions": "1.52.0"
      // 1.53.0 breaks border-number, border-number-link and text-check e2e in chrome
    },
    {
      "matchPackageNames": [
        'eslint-plugin-testing-library'
      ],
      "rangeStrategy": "pin",
      "allowedVersions": "7.6.3"
      // later versions have a bug that reports false positives
    },
    {
      "groupName": "all-frontend-non-major-dependencies",
      "matchPaths": [
        "frontend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "labels": [
        "frontend-updates",
        "renovate"
      ],
      "automerge": true,
    },
    {
      "groupName": "all-backend-non-major-dependencies",
      "matchPaths": [
        "backend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "labels": [
        "backend-updates",
        "renovate"
      ],
    },
    {
      "packageNames": [
        "de.bund.digitalservice:neuris-juris-xml-export",
        "de.bund.digitalservice:neuris-caselaw-migration-schema"
      ],
      "automerge": false,
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "no-automerge",
        "renovate"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
    },
    {
      "groupName": "neuris-languagetool-docker-image",
      "automerge": true,
      "labels": [
        "no-automerge"
      ],
      "matchDatasources": [
        "docker"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "ghcr.io/digitalservicebund/neuris-languagetool"
      ],
    }
  ]
}
