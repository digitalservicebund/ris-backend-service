{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "requiredStatusChecks": [
    "deploy-uat"
  ],
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "platformAutomerge": false,
  "rangeStrategy": "bump",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "timezone": "Europe/Berlin",
  "automergeSchedule": [
    "before 5:30am every weekday",
    "after 7:30pm every weekday"
  ],
  "automergeType": "pr",
  "packageRules": [
    {
      // FIXME: Remove this when spring-cloud-kubernetes is compatible, see https://github.com/spring-cloud/spring-cloud-kubernetes/issues/1923
      "matchPackageNames": ['org.springframework.boot*'],
      "allowedVersions": "3.4.x"
    },
    {
      // FIXME: Remove this when msw is compatible
      "matchPackageNames": ['node'],
      "allowedVersions": "22.15.0"
    },
    {
      "groupName": "all-frontend-non-major-dependencies",
      "matchPaths": [
        "frontend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "labels": [
        "frontend-updates"
      ],
      "automerge": true,
    },
    {
      "groupName": "all-backend-non-major-dependencies",
      "matchPaths": [
        "backend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "labels": [
        "backend-updates"
      ],
    },
    {
      "packageNames": [
        "de.bund.digitalservice:neuris-juris-xml-export",
        "de.bund.digitalservice:neuris-caselaw-migration-schema"
      ],
      "automerge": false,
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "no-automerge"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
    },
    {
      // due to aws upgrade problem
      "groupName": "blocked-aws-header-error",
      "matchPackageNames": [
        "software.amazon.awssdk:bom",
      ],
      "automerge": false,
      "labels": [
        "no-automerge"
      ]
    },
    {
      "groupName": "neuris-languagetool-docker-image",
      "automerge": true,
      "labels": [
        "no-automerge"
      ],
      "matchDatasources": [
        "docker"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "ghcr.io/digitalservicebund/neuris-languagetool"
      ],
    }
  ]
}
