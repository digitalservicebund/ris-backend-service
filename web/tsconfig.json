{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "types": ["@types/jest", "axe-playwright", "node"]
  },
  "include": ["src", "test/**/*.ts", "jest.setup.ts"],
  "exclude": ["test/e2e/**/*.ts", "test/a11y/**/*.ts"]
}
